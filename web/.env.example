# Environment Variables Template
# Copy this file to .env.local for local development

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL="postgresql://user:password@localhost:5432/genesis22?schema=public"

# =============================================================================
# NextAuth Configuration
# =============================================================================
NEXTAUTH_URL="http://localhost:3022"
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"

# OAuth Providers (optional)
GITHUB_ID="your-github-oauth-app-id"
GITHUB_SECRET="your-github-oauth-app-secret"
GOOGLE_CLIENT_ID="your-google-oauth-client-id"
GOOGLE_CLIENT_SECRET="your-google-oauth-client-secret"

# =============================================================================
# Telemetry Configuration (CI/CD & Privacy)
# =============================================================================
# Disable Prisma telemetry and update checks
# Recommended for CI/CD environments and privacy-conscious deployments
CHECKPOINT_DISABLE=1

# Disable Next.js telemetry
# Recommended for CI/CD environments
NEXT_TELEMETRY_DISABLED=1

# =============================================================================
# Application Configuration
# =============================================================================
NODE_ENV="development"

# =============================================================================
# Email Configuration (optional, for future use)
# =============================================================================
# SMTP_HOST="smtp.example.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@example.com"
# SMTP_PASSWORD="your-email-password"
# SMTP_FROM="noreply@example.com"

# =============================================================================
# Redis Configuration (optional, for future use)
# =============================================================================
# REDIS_URL="redis://localhost:6379"

# =============================================================================
# Storage Configuration (optional, for future use)
# =============================================================================
# S3_BUCKET="your-bucket-name"
# S3_REGION="us-east-1"
# S3_ACCESS_KEY_ID="your-access-key"
# S3_SECRET_ACCESS_KEY="your-secret-key"

# =============================================================================
# Feature Flags (optional)
# =============================================================================
# ENABLE_ANALYTICS="false"
# ENABLE_NOTIFICATIONS="false"
